<% 
  var title = null, style = null;
  if (is_post() || is_page()) {
    title = page.title;
  } else if (is_archive()) {
    title = '归档';
  } else if (is_category()) {
    title = '分类';
  } else if (is_tag()) {
    title = '标签';
  } else if (is_home()) {
    title = ' ';
  }
%>

<% if (title) { %>
  <style>
    /* 清除默认样式等 */
    body, ul {
      margin: 0;
      padding: 0;
      list-style: none;
    }
    .right{
      display: flex;
    }

    /* 导航栏容器 */
    .menu-container {
      display: flex; /* 横向排布 */
      align-items: center; /* 垂直居中 */
    }

    /* 导航项样式 */
    .menu-item {
      margin-right: 20px; /* 调整导航项之间的间距 */
    }

    /* 导航链接样式 */
    .menu-item a {
      text-decoration: none;
      color: #333; /* 设置链接颜色 */
      font-size: 16px; /* 设置字体大小 */
      font-weight: bold; /* 设置字体粗细 */
      padding: 10px; /* 设置内边距 */
      transition: color 0.3s ease; /* 添加过渡效果 */
    }

    /* 激活状态下的导航链接样式 */
    .menu-item a.active {
      color: #ff6600; /* 设置激活状态下的颜色 */
    }

    /* 鼠标悬停时的导航链接样式 */
    .menu-item a:hover {
      color: #ff6600; /* 设置悬停状态下的颜色 */
    }
  </style>

  <nav class="navbar">
    <div class="left">
      <% if (theme.navbar.back_home && !is_home()) { %>
        <i class="iconfont iconhome j-navbar-back-home"></i>
      <% } %>
      <% if (theme.qrcode.enable) { %>
        <i class="iconfont iconqrcode j-navbar-qrcode"></i>
      <% } %>
      <% if (theme.color_mode.enable) { %>
        <i class="iconfont iconmoono" id="color-toggle" color-toggle="light"></i>
      <% } %>
      <% if (theme.search.enable && config.search.path) { %>
        <i class="iconfont iconsearch j-navbar-search"></i>
      <% } %>
    </div>
    <div class="center"><%= title %></div>
    <div class="right">
      
      <!-- <i class="iconfont iconmenu j-navbar-menu"></i> -->
      <nav class="pc-menu" >
        <div class="menu-container" style="width:1000px; ">

          <li class="menu-item" >
          <a href="/ " class="underline active stroke" > Home</a>
          </li><li class="menu-item">
          <a href="/archives " class="underline stroke"> Archives</a>
          </li><li class="menu-item">
          <a href="/tags/ " class="underline stroke"> Tags</a>
          </li><li class="menu-item">
          <a href="/references/ " class="underline stroke"> References</a>
          </li><li class="menu-item">
          <a href="/galleries/ " class="underline stroke"> Galleries</a>
          </li><li class="menu-item">
          <a href="/board/ " class="underline stroke"> Board</a>
          </li><li class="menu-item">
          <a href="/about/ " class="underline stroke"> About Me</a>
          </li>

        </div>
      </nav>
        <!-- <i class="iconfont iconmenu j-navbar-menu"></i> -->
    </div>
    <% if (theme.qrcode.enable) { %>
      <div id="qrcode-navbar"></div>
    <% } %>
  </nav>
<% } %>